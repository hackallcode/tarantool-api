{
    "core": {
        "port": "${PORT|9001}",
        "prefix": ""
    },
    "db": {
        "host": "${DB_HOST|127.0.0.1}",
        "port": "${DB_PORT|3301}",
        "username": "${DB_USERNAME|kv_storage}",
        "password": "${DB_PASSWORD|kv_storage}",
        "space": "${DB_SPACE|kv_storage}"
    },
    "auth": {
        "secret": "${JWT_SECRET|Very_Secret_Key!}",
        "cookie_name": "jwt",
        "cookie_lifetime": 43200
    },
    "logger": {
        "debug": {
            "mode": "console"
        },
        "info": {
            "mode": "console"
        },
        "warning": {
            "mode": "console"
        },
        "error": {
            "mode": "console"
        },
        "fatal": {
            "mode": "file",
            "filename": "log/fatal.log"
        }
    },
    "storage": {
        "avatar": {
            "dir": "./upload/avatar/",
            "url": "/upload/avatar/"
        },
        "trash": {
            "dir": "./trash/",
            "url": "/trash/"
        }
    }
}